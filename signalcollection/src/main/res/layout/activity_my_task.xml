<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.example.signalcollection.view.MyTabLayout
        android:id="@+id/myTabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorHeight="1dp"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabSelectedTextColor="@color/themeBlue"
        app:tabTextColor="@color/text_color_gray"
        app:tabIndicatorColor="@color/themeBlue"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_line_list"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/taskViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>