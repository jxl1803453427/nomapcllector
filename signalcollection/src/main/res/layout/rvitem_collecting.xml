<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:background="@drawable/shape_item_round_rect"
              android:orientation="vertical"
              android:padding="5dp">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="来来来家居城"
        android:textSize="14sp"
        android:textColor="@color/text_color_black"/>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp"
        android:text="已采集点数%d个"
        android:textColor="@color/text_color_gray"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="深圳市南山区什么队什么肤色"
        android:textColor="@color/text_color_hint"
        android:textSize="12sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/divider_line_list"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDataSubmit"
            android:layout_width="99dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:background="@drawable/selector_blue_round_rect"
            android:gravity="center"
            android:text="数据提交"
            android:textColor="#fff"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/tvSubmitSingle"
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_blue_round_rect"
            android:gravity="center"
            android:text="任务提交"
            android:textColor="#fff"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvShowMap"
            android:layout_width="99dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/selector_blue_round_rect"
            android:gravity="center"
            android:text="查看地图"
            android:textColor="#fff"
            android:textSize="12sp"/>
    </FrameLayout>
</LinearLayout>
